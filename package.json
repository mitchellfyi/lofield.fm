{
  "name": "lofield.fm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "quality": "npm run lint && npm run typecheck && npm run format:check",
    "quality:full": "npm run quality && npm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm test && npm run test:e2e",
    "ci": "npm run quality && npm run test:all",
    "prepare": "husky",
    "dk": "DOYAKEN_HOME=./node_modules/@doyaken/doyaken ./node_modules/@doyaken/doyaken/bin/doyaken"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.18",
    "@ai-sdk/react": "^3.0.50",
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/language": "^6.12.1",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@doyaken/doyaken": "^0.1.13",
    "@lezer/highlight": "^1.2.3",
    "@sentry/nextjs": "^10.36.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.91.1",
    "@uiw/react-codemirror": "^4.25.4",
    "@vercel/analytics": "^1.6.1",
    "ai": "^6.0.48",
    "diff": "^8.0.3",
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tone": "^15.0.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@types/diff": "^7.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
