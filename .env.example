# OpenAI API Configuration
# This is only used as fallback in development mode
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Supabase Configuration
# Get these from https://supabase.com/dashboard -> Project Settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# API Key Encryption
# Generate a secure 32+ character secret for encrypting user API keys
# You can generate one with: openssl rand -hex 32
API_KEY_ENCRYPTION_SECRET=your_32_character_or_longer_secret_here

# Supabase CLI (for migrations - used in CI/CD)
# Get project ref from https://supabase.com/dashboard -> Project Settings -> General
# The project ref is in your project URL: https://<project-ref>.supabase.co
SUPABASE_PROJECT_REF=your_project_ref_here
# Get access token from https://supabase.com/dashboard/account/tokens
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here

# OAuth Providers (optional - for social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Sentry Error Tracking (optional)
# Get these from https://sentry.io -> Project Settings -> Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/1234567
SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/1234567
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
# Auth token for source map uploads (from https://sentry.io/settings/auth-tokens/)
SENTRY_AUTH_TOKEN=your_sentry_auth_token
